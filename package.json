{
  "name": "chime",
  "version": "0.1.2",
  "description": "Get Notified By Your Gemini CLI",
  "type": "module",
  "main": "chime.js",
  "mcpServers": {
    "nodeServer": {
      "command": "node",
      "args": [
        "${extensionPath}${/}dist${/}chime.js"
