    "package": "bash scripts/package.sh"
  },
  "devDependencies": {
    "@types/node": "^20.11.25",
    "@types/which": "^3.0.4",
    "typescript": "~5.4.5"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.0",
    "zod": "^3.22.4"
  }
}
